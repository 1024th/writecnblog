{
    "name": "write-cnblog",
    "displayName": "WriteCnblog",
    "description": "write blog to Cnblogs",
    "version": "0.1.0",
    "publisher": "caipeiyu",
    "engines": {
        "vscode": "^1.31.0"
    },
    "license": "SEE LICENSE IN LICENSE.md",
    "bugs": {
        "url": "https://github.com/kotcmm/writeCnblog/issues"
    },
    "homepage": "https://github.com/kotcmm/writeCnblog/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/kotcmm/writeCnblog.git"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:markdown",
        "onView:blogPostExplorer",
        "onCommand:writeCnblog.publishPost",
        "onCommand:writeCnblog.savePost",
        "onCommand:writeCnblog.getRecentPosts",
        "onCommand:writeCnblog.newMediaObject",
        "onCommand:writeCnblog.postImageFromClipboard",
        "onCommand:writeCnblog.refreshPost",
        "onCommand:writeCnblog.deletePost"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "writeCnblog.createPost",
                "title": "新建文章",
                "icon": {
                    "light": "resources/light/createPost.svg",
                    "dark": "resources/dark/createPost.svg"
                }
            },
            {
                "command": "writeCnblog.openPost",
                "title": "打开文章"
            },
            {
                "command": "writeCnblog.publishPost",
                "title": "发布文章"
            },
            {
                "command": "writeCnblog.savePost",
                "title": "保存草稿",
                "icon": {
                    "light": "resources/light/uploadSave.svg",
                    "dark": "resources/dark/uploadSave.svg"
                }
            },
            {
                "command": "writeCnblog.getRecentPosts",
                "title": "拉取最近文章",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            },
            {
                "command": "writeCnblog.newMediaObject",
                "title": "Cnblog:上传图片"
            },
            {
                "command": "writeCnblog.postImageFromClipboard",
                "title": "Cnblog:获取剪贴板图片上传"
            },
            {
                "command": "writeCnblog.refreshPost",
                "title": "拉取文章",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            },
            {
                "command": "writeCnblog.deletePost",
                "title": "删除文章",
                "icon": {
                    "light": "resources/light/trash.svg",
                    "dark": "resources/dark/trash.svg"
                }
            }
        ],
        "keybindings": [
            {
                "command": "writeCnblog.newMediaObject",
                "key": "shift+i",
                "mac": "shift+i",
                "when": "editorTextFocus && editorLangId == 'markdown'"
            },
            {
                "command": "writeCnblog.postImageFromClipboard",
                "key": "shift+alt+i",
                "mac": "shift+alt+i",
                "when": "editorTextFocus && editorLangId == 'markdown'"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "writeCnblog configuration",
            "properties": {
                "writeCnblog.rpcUrl": {
                    "type": "string",
                    "default": "",
                    "description": "博客园的MetaWeblog接口地址"
                },
                "writeCnblog.userName": {
                    "type": "string",
                    "default": "",
                    "description": "博客园的用户名"
                },
                "writeCnblog.passWord": {
                    "type": "string",
                    "default": "",
                    "description": "博客园的密码"
                }
            }
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "write-cnblog",
                    "title": "WriteCnblog",
                    "icon": "resources/write-cnblog.svg"
                }
            ]
        },
        "views": {
            "write-cnblog": [
                {
                    "id": "blogPostExplorer",
                    "name": "文章列表"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "writeCnblog.createPost",
                    "when": "view == blogPostExplorer",
                    "group": "navigation"
                },
                {
                    "command": "writeCnblog.getRecentPosts",
                    "when": "view == blogPostExplorer",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "writeCnblog.publishPost",
                    "when": "view == blogPostExplorer && viewItem == BlogPostItem"
                },
                {
                    "command": "writeCnblog.savePost",
                    "when": "view == blogPostExplorer && viewItem == BlogPostItem",
                    "group": "inline"
                },
                {
                    "command": "writeCnblog.refreshPost",
                    "when": "view == blogPostExplorer && viewItem == BlogPostItem"
                },
                {
                    "command": "writeCnblog.deletePost",
                    "when": "view == blogPostExplorer && viewItem == BlogPostItem"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.54",
        "@types/mkdirp": "^0.5.2",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.36"
    },
    "dependencies": {
        "mkdirp": "^0.5.1",
        "moment": "^2.24.0",
        "request": "^2.88.0",
        "xml2js": "^0.4.19"
    }
}
