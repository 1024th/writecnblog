{
    "name": "write-cnblog",
    "displayName": "WriteCnblog",
    "description": "write blog to Cnblogs",
    "version": "0.1.0",
    "publisher": "caipeiyu",
    "engines": {
        "vscode": "^1.31.0"
    },
    "license": "SEE LICENSE IN LICENSE.md",
    "bugs": {
        "url": "https://github.com/kotcmm/writeCnblog/issues"
    },
    "homepage": "https://github.com/kotcmm/writeCnblog/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/kotcmm/writeCnblog.git"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:markdown",
        "onCommand:extension.writeCnblog.newPost",
        "onCommand:extension.writeCnblog.savePost",
        "onCommand:extension.writeCnblog.editNewPost",
        "onCommand:extension.writeCnblog.editSavePost",
        "onCommand:extension.writeCnblog.recentPosts",
        "onCommand:extension.writeCnblog.newMediaObject",
        "onCommand:extension.writeCnblog.postImageFromClipboard"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [{
                "command": "extension.writeCnblog.newPost",
                "title": "Cnblog:发布博文"
            },
            {
                "command": "extension.writeCnblog.savePost",
                "title": "Cnblog:保存草稿"
            },
            {
                "command": "extension.writeCnblog.editNewPost",
                "title": "Cnblog:更新并发布博文"
            },
            {
                "command": "extension.writeCnblog.editSavePost",
                "title": "Cnblog:更新并保存草稿"
            },
            {
                "command": "extension.writeCnblog.recentPosts",
                "title": "Cnblog:获取文章"
            },
            {
                "command": "extension.writeCnblog.newMediaObject",
                "title": "Cnblog:上传图片"
            },
            {
                "command": "extension.writeCnblog.postImageFromClipboard",
                "title": "Cnblog:获取剪贴板图片上传"
            }
        ],
        "keybindings": [{
                "command": "extension.writeCnblog.newMediaObject",
                "key": "shift+i",
                "mac": "shift+i",
                "when": "editorTextFocus && editorLangId == 'markdown'"
            },
            {
                "command": "extension.writeCnblog.postImageFromClipboard",
                "key": "shift+alt+i",
                "mac": "shift+alt+i",
                "when": "editorTextFocus && editorLangId == 'markdown'"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "writeCnblog configuration",
            "properties": {
                "writeCnblog.blogName": {
                    "type": "string",
                    "default": "",
                    "description": "博客园的Blog地址名"
                },
                "writeCnblog.userName": {
                    "type": "string",
                    "default": "",
                    "description": "博客园的用户名"
                },
                "writeCnblog.passWord": {
                    "type": "string",
                    "default": "",
                    "description": "博客园的密码"
                }
            }
        },
        "viewsContainers": {
            "activitybar": [{
                "id": "write-cnblog",
                "title": "WriteCnblog",
                "icon": "resources/write-cnblog.svg"
            }]
        },
        "views": {
            "write-cnblog": [{
                "id": "write-cnblog-post",
                "name": "文章列表"
            }]
        },
        "menus": {
            "view/title": [{
                "command": "extension.writeCnblog.newPost",
                "when": "view == write-cnblog-post",
                "group": "navigation@2"
            }]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.54",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.36"
    },
    "dependencies": {
        "mkdirp": "^0.5.1",
        "moment": "^2.24.0",
        "request": "^2.88.0",
        "xml2js": "^0.4.19"
    }
}