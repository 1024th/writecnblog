{
    "name": "writecnbolg",
    "displayName": "WriteCnbolg",
    "description": "write bolg to cnbolg",
    "version": "0.0.1",
    "publisher": "caipeiyu",
    "engines": {
        "vscode": "^0.10.10"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.writeCnbolg.newPost",
        "onCommand:extension.writeCnbolg.savePost",
        "onCommand:extension.writeCnbolg.recentPosts",
        "onCommand:extension.writeCnbolg.newMediaObject"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [{
            "command": "extension.writeCnbolg.newPost",
            "title": "cnbolg:发布博文"
        },{
            "command": "extension.writeCnbolg.savePost",
            "title": "cnbolg:保存草稿"
        },{
            "command": "extension.writeCnbolg.recentPosts",
            "title": "cnbolg:获取文章"
        },{
            "command": "extension.writeCnbolg.newMediaObject",
            "title": "cnbolg:上传图片"
        }]
    },
    "scripts": {
        "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
        "compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^1.8.5",
        "vscode": "^0.11.10",
        "xml2js":"^0.4.16"
    }
}